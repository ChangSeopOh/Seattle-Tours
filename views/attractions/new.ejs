<% include ../partials/header%>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Create a New Attraction</h1> 
        </div> 
                <div class="col-12 col-md-6 col-lg-4">
                    <form action="/attractions" method="POST">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input class="form-control" type="text" name = "name" placeholder="Yosemite">
                        </div>
                        <div class="form-group">
                            <label for="price">Cost</label>
                            <input class="form-control" type="number" name = "price" id="price" placeholder="9.99" min="0.01" step="0.01">
                        </div>
                        <div class="form-group">
                            <label for="image">Image</label>
                            <input class="form-control" type="text" name = "image" id="image" placeholder="https://imges.com/mountain.jpeg">
                        </div>
                        <div class="form-group">
                            <label for="description">description</label>
                            <input class="form-control" type="text" name = "description" id="description" placeholder="California's Sierra Nevada mountains.">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block btn-lg btn-default">Submit!</button>
                        </div> 
                    </form> 
                        <a href="/attractions">Go Back!</a>
                </div>
    </div>
</div>
<% include ../partials/footer%>
