<% include ../partials/header%>

<div class="container"> 
    <div class="row  justify-content-center" >
            <div class="col-md-12 text-center">
                <h1>EDIT <%=attraction.name%> attraction</h1> 
            </div>

            <div class="col-12 col-md-6 col-lg-4">
                <form action="/attractions/<%=attraction._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name = "attraction[name]" value="<%=attraction.name%>">
                    </div><div class="form-group">
                        <input class="form-control" type="number" name = "attraction[price]" value="<%=attraction.price%>" min="0.01" step="0.01">
                    </div><div class="form-group">
                        <input class="form-control" type="text" name = "attraction[image]" value="<%=attraction.image%>">
                    </div><div class="form-group">
                        <input class="form-control" type="text" name = "attraction[description]" value="<%=attraction.description%>">
                    </div><div class="form-group">
                        <button class="btn btn-primary btn-block btn-lg btn-default">Submit!</button>
                    </div> 
                    </form> 
                    <a href="/attractions">Go Back!</a>
             </div>

    </div>
</div>
<% include ../partials/footer%>
