<% include ../partials/header%>

<div class="container">
    <div class="row  justify-content-center" >
            <div class="col-md-12 text-center">
                <h1>Add New Comment to <%=attraction.name%></h1> 
            </div>
        
            <div class="col-12 col-md-6 col-lg-4">
                <form action="/attractions/<%=attraction._id%>/comments" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name = "comment[text]" placeholder="text">
                    </div>
                    <!--<div class="form-group">-->
                    <!--    <input class="form-control" type="text" name = "comment[author]" placeholder="author">-->
                    <!--</div>-->
                    <div class="form-group">
                        <button class="btn btn-primary btn-block btn-lg btn-default">Submit!</button>
                    </div> 
                    </form> 
                    <a href="/attractions/<%=attraction._id%>">Go Back!</a>
             </div>

    </div>
</div>
<% include ../partials/footer%>
