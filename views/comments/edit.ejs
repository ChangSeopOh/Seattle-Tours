<% include ../partials/header%>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
                <h1>Edit Comment</h1> 
        </div>
       
            <div class="col-12 col-md-6 col-lg-4">
                <form action="/attractions/<%=attraction_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name = "comment[text]" value="<%=comment.text%>">
                    </div> 
                    <div class="form-group">
                        <button class="btn btn-primary btn-block btn-lg btn-default">Submit!</button>
                    </div> 
                    </form> 
                    <a href="/attractions/<%=attraction_id%>">Go Back!</a>
             </div>

    </div>
</div>
